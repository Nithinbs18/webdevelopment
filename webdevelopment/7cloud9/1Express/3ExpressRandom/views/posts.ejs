<% include partials/header %>
<h1>The Posts Page</h1>

<% for(var i = 0; i < posts.length; i++){ %>
 <li>
     <%= posts[i].name %> - <strong><%= posts[i].age %></strong>
 </li>
<% } %>
<br/>
<br/>
<% posts.forEach(function(post){ %>
 <li>
     <%= post.name %> - <strong><%= post.age %></strong>
 </li>
<% }) %>
<% include partials/footer %>


<!--Here anything within <%  %> will be treated a java script content, we use <%  %> when ever we have to print something  -->
<!--if we have only logic to be processed we use only <%  %> eg. consider the if/ else statment above it does not have "=" if we have to print content on HTML we use <%= %> -->