<% include ./partials/header %>
<div class="ui center aligned sizer vertical segment">
  <div class="ui huge header">Food Blog</div>
</div>
<% blogs.forEach(function(blog){ %>
    <div class="ui main text container segment">
        <h2><%= blog.title%></h3><br/>
        <img src="<%= blog.image %>" width=250 height= 180/> <br/>
        <p><strong>Description :</strong><%= blog.body.substring(0,50) %>...</p>
        <p><strong>Created on:</strong> <%= blog.created.toDateString()%></p>
        <a class="ui floated basic violet button" href="/blogs/<%= blog._id %>">
            Read More
           <i class="right chevron icon"></i>
        </a>
    </div>
<% }); %>
<% include ./partials/footer %>